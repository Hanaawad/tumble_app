function showMembers(resultsHTML) {
  const members = document.getElementById('member-avatars');
  members.innerHTML = resultsHTML;
}

function showCount(resultsHTML) {
  const count = document.getElementById('member-count');
  count.innerHTML = resultsHTML;
}

showMembers('<%= j render "activities/members_list", activity: @activity %>')

showCount('<%= "#{@activity.min_limit - @activity.users.count} more member".pluralize(@activity.min_limit - @activity.users.count) %>')
