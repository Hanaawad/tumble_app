<% @activities.each do |activity| %>
    <div class="col-xs-12 col-sm-4" style="padding: 0px">
      <div class="activity-card-wrapper">
      <div class="activity-card" style="background-image: linear-gradient(-225deg, rgba(44, 29, 29, 1) 0%, rgba(79, 9, 9, 0.46) 30%), url(<%= cl_image_path(activity.photo, crop: :fill) %> ); background-size: cover; background-repeat: no-repeat; background-position: 50% 50%;">
           <div class="info ">
          <h2 ><%=link_to activity.name, activity_path(activity) ,:class => "type"%></h2>

          <div class="adjust-icon text-center">
            <i class="<%= activity.icon %>"></i>
          </div>
          </div>
      </div>
    </div>
  </div>
<% end %>
