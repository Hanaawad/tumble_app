<div class="cards-container">
  <div class="cards">
      <div class="row" id="activity-cards">
        <% @activities.each do |activity| %>
          <div class="col-xs-12  col-md-4 col-sm-6 ">
            <% if  activity.photos.empty?%>
              <div class="card"><%= cl_image_tag(activity.photo, crop: :fill) %>
            <% else %>
              <div class="card"><%= cl_image_tag(activity.photos.first.photo, crop: :fill) %>
            <% end %>
              <div class="info">
                <h2 ><%=link_to activity.name, activity_path(activity) ,:class => "type"%></h2>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div
  id="map"
  style="width: 800px;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<%= link_to "Earth", filter_by_category_path(Category.find_by_name("earth")), remote: true %>
