
<div class="container">
  <div class="wrapper">
    <div class="row">
      <% @activities.each do |activity| %>
       <div class="col-xs-12  col-md-4 col-sm-6 ">
        <div class="card"><%= cl_image_tag(activity.photo, crop: :fill) %>

          <div class="info">
            <h2 ><%=link_to activity.name, activity_path(activity) ,:class => "type"%></h2>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

