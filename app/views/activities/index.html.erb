<div class="cards-container">
  <div class="cards">
      <div class="row">
        <% @activities.each do |activity| %>
          <div class="col-xs-12  col-md-4 col-sm-6 ">
            <div class="card"><%= cl_image_tag(activity.photos.first, crop: :fill) %>
              <div class="info">
                <h2 ><%=link_to activity.name, activity_path(activity) ,:class => "type"%></h2>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div
  id="map"
  style="width: 800px;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<form action="/activities#index" method="get">
  <input type="checkbox" name="category" value="earth"> Earth<br>
  <input type="checkbox" name="category" value="wind"> Wind<br>
  <input type="checkbox" name="category" value="fire"> Fire<br>
  <input type="checkbox" name="category" value="water"> Water<br>
  <input type="submit" value="Submit">
</form>



