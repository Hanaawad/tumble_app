<div class="banner" style="background-image:linear-gradient(-225deg, rgba(243, 241, 241, 0.9) 0%, rgba(232, 226, 179, 0.1) 90%), url(<%= @activity.photo %>);">
    <div class="slogen">
      <div>
        <h1><%= @activity.name %></h1>
      </div>
    </div>
  </div>
<div class="container">

  <div class="show-description">
    <div class="body-left">
      <div class="sketchy">
         <h1><%= @activity.name %></h1>
          <p>  <i class="fas fa-caret-right icon-color"></i> <%= @activity.description%></p>
          <p class="indent">- <%= @activity.start_date %> - <%= @activity.end_date %></p>
          <p class="indent">- Activation date: <%= @activity.activation_date %></p>
          <p class="indent">- <%= @activity.location %></p>
          <p class="indent">- minimum limit: <%= @activity.min_limit %> members</p>
          <p class="indent">- maximum limit: <%= @activity.max_limit %> members</p>
          <p class="indent">- current number of members: <%= @activity.users.count %> members</p>
          <%= link_to "Join group", activity_bookings_path(@activity), method:"post" ,class:'black-button-tumble' %>
       <!--    <p>current members</p>
 -->

      </div>
    </div>

    <div class="body-book">
      <div class="book">
        <div class="back">
        </div>
        <div class="page6">

        </div>
        <div class="page5">
        </div>

        <div class="page4"></div>
        <div class="page3"></div>
        <div class="page2"></div>
        <div class="page1"></div>
        <div class="front"style="background-image: linear-gradient(-225deg, rgba(225,225,225,0) 0%, rgba(225,225,225,0) 100%), url(<%= image_path 'worldmap.svg' %>);" class ="adjustsize">
          <h1>reviews</h1>
        </div>
      </div>
    </div>
  </div>
</div>
