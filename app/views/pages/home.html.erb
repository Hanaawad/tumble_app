<div class="container form-inline form-search-bar">
      <div class="home-search ">
        <h1>Find your next activity</h1>
        <div  class="searchbar">
          <%= form_tag activities_path, method: :get do %>
            <%= text_field_tag :location,
              params[:location],
              class: "form-control", id:"search-input",
              placeholder: "Find activities at your next destination"
            %>
            <%= date_field_tag :start_date,
              params[:start_date],
              class: "form-control datepicker", id:"search-input",
              placeholder: "Start date"
            %>
            <%= date_field_tag :end_date,
              params[:end_date],
              class: "form-control datepicker", id:"search-input",
              placeholder: "End date"
            %>
            <%= button_tag(type: 'submit', class: "btn search-bar") do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        </div>
      </div>
</div>

